<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tic_tac_toe_kotlin_multiplayer_game">

    <application
        android:name=".RootApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_02"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_02_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Tictactoekotlinmultiplayergame">
        <activity
            android:name=".ui.splash_screen.SplashScreenActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.multiPlayer.online.star_game.OnlineGameModeActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.newgame.NewCPUGameActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_new_c_p_u_game"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Tictactoekotlinmultiplayergame.NoActionBar" />
        <activity android:name=".ui.StartGameActivity" />

        <activity
            android:name=".ui.multiPlayer.MultiPlayerActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Tictactoekotlinmultiplayergame.NoActionBar" />
        <activity android:name=".ui.themes.Themes" />
    </application>

</manifest>