<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/first_row_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        >
        <ImageButton
            android:id="@+id/theme_button_00"
            android:tag="tac_00"
            android:scaleType="centerCrop"
            android:background="@mipmap/tic_01"
            android:layout_margin="20dp"
            android:layout_width="70dp"
            android:layout_height="70dp" />
        <ImageButton
            android:id="@+id/theme_button_01"
            android:tag="tac_01"
            android:scaleType="centerCrop"
            android:background="@mipmap/tic_02"
            android:layout_margin="20dp"
            android:layout_width="70dp"
            android:layout_height="70dp" />
        <ImageButton
            android:id="@+id/theme_button_02"
            android:tag="tac_02"
            android:scaleType="centerCrop"
            android:background="@mipmap/tic_03"
            android:layout_margin="20dp"
            android:layout_width="70dp"
            android:layout_height="70dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <ImageButton
            android:id="@+id/theme_button_10"
            android:tag="tac_10"
            android:scaleType="centerCrop"
            android:background="@mipmap/tic_04"
            android:layout_margin="20dp"
            android:layout_width="70dp"
            android:layout_height="70dp" />
        <ImageButton
            android:id="@+id/theme_button_11"
            android:tag="tac_11"
            android:scaleType="centerCrop"
            android:background="@mipmap/tic_05"
            android:layout_margin="20dp"
            android:layout_width="70dp"
            android:layout_height="70dp" />
        <ImageButton
            android:id="@+id/theme_button_12"
            android:tag="tac_12"
            android:scaleType="centerCrop"
            android:background="@mipmap/tic_06"
            android:layout_margin="20dp"
            android:layout_width="70dp"
            android:layout_height="70dp" />

    </LinearLayout>

</LinearLayout>